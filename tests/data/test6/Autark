check {
  env.sh
}

set {
  CC
  ${CC gcc}
}

args {
  CFLAGS
  ${CFLAGS}
  @{pkgconf --cflags --static libcurl}
  if {
    match { ${BUILD_TYPE Debug} Release }
    -O2
  } else {
    -O0
    -g
  }
}

args {
  LDFLAGS
  ${LDFLAGS}
  @{pkgconf --libs --static libcurl}
}

sources {
  SOURCES
  main.c
  util.c
}

compile {
  ${CC} ${CFLAGS} ${SOURCES}
}

link {
  ${CC} ${LDFLAGS} ${SOURCES}
  products {
    hello
  }
}

