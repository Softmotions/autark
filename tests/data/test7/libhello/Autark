check {
  libhello.sh
}

set {
  SOURCES
  hello.c
}

cc {
  ${SOURCES}
  ${CFLAGS}
  ${CC}
  consumes {
    hello.h
  }
}

run {
  exec { ${AR} rcs libhello.a ${CC_OBJS} }
  consumes {
    ${CC_OBJS}
  }
  produces {
    libhello.a
  }
}

configure {
  hello.h.in
}

install {
  ${INSTALL_LIB_DIR}
  libhello.a
}

install {
  ^{${INSTALL_INCLUDE_DIR} /libhello}
  hello.h
}